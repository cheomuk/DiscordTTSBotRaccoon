{
    "model": "TTS",
    "run_name": "korean_coqui_tts",
    "datasets": [
      {
        "name": "korean_dataset",
        "path": "../",
        "meta_file": "metadata.csv"
      }
    ],
    "audio": {
      "sample_rate": 22050,
      "trim_silence": true
    },
    "vocoder": {
      "type": "Hifi-GAN",
      "checkpoint_path": "..\\vocoder"
    },
    "training": {
      "batch_size": 32,
      "eval_batch_size": 16,
      "epochs": 1000,
      "learning_rate": 0.001,
      "grad_clip": 1.0
    }
  }  